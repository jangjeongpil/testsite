<div class="adminwrap modal_return_apply"> 
    <div class="admin_body">
        <div class="admin_content">
            <div class="admin_contentwrap">
                <div class="btn_group">
                    <img id="modal_exitBtn3" src="/images/btn_exit.png">
                </div>
                <div style="text-align: center;">
                    <h1>도서 반납신청</h1>
                </div>                     
                <div class="write_table">
                    <div class="write_table_div" style="display: none;">
                        <div class="write_table_div1">
                            <span>반납유무 숨김</span>
                        </div>
                        <div class="write_table_div2">
                            <input type="text" id="returnYN" value="N">
                        </div>
                        <div class="write_table_div3">
                            
                        </div>
                    </div>
                    <div class="write_table_div">
                        <div class="write_table_div1">
                            <span>신청자</span>
                        </div>
                        <div class="write_table_div2_modify">
                            <span id="returnapply_user"><%= loginMember.name %></span>
                        </div>
                        <div class="write_table_div3">
                            
                        </div>
                    </div>
                    <div class="message_table_div">
                        <div class="message_table_div1">
                        
                        </div>
                        <div class="message_table_div2">
                            <span></span>
                        </div>
                        <div class="message_table_div3">
                        
                        </div>
                    </div>
                    <div class="write_table_div">
                        <div class="write_table_div1">
                            <span>반납신청일</span>
                        </div>
                        <div class="write_table_div2">
                            <input type="text" id="returnapply_returnDate" value="">
                        </div>
                        <div class="write_table_div3">
                            
                        </div>
                    </div>
                    <div class="message_table_div">
                        <div class="message_table_div1">
                        
                        </div>
                        <div class="message_table_div2">
                            <span id="returnDateMessage">※ 반납신청일을 입력해주세요.</span>
                        </div>
                        <div class="message_table_div3">
                        
                        </div>
                    </div>
                    <div class="write_table_div">
                        <div class="write_table_div1">
                            <span>관리번호</span>
                        </div>
                        <div class="write_table_div2_modify">
                            <span id="returnapply_managementNumber"></span>
                        </div>               
                        <div class="write_table_div3">
                            
                        </div>
                    </div>
                    <div class="message_table_div">
                        <div class="message_table_div1">
                        
                        </div>
                        <div class="message_table_div2">
                            <span></span>
                        </div>
                        <div class="message_table_div3">
                        
                        </div>
                    </div>
                    <div class="write_table_btn">
                        <div>
                            <input type="submit" id="postFormBtn2" value="반납신청"/>
                            <a id="cancelBtn2" href="javascript:void(0);">
                                <span>취소하기</span>
                            </a>                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(function() {
    $(function init() {
        // 반납일 오늘 날짜 자동기입
        $('#returnapply_returnDate').attr('value', todayDate());

        // 날짜 플래터 적용
        $('#returnapply_returnDate').change(function() {
            var $this =  $('#returnapply_returnDate').val();
            var formatdate = dayformat($this);
            $('#returnapply_returnDate').val(formatdate);
        });

        // 데이터 유무에 따른 알림 메시지 공개/비공개
        if($('#returnapply_returnDate').val() != "") {
            $('#returnDateMessage').css('display', 'none');
        }else {
            $('#returnDateMessage').css('display', 'block');
        }

        // 데이터 유무에 따른 알림 메시지 공개/비공개
        $('#returnapply_returnDate').change(function() {
            if($('#returnapply_returnDate').val() != "") {
                $('#returnDateMessage').css('display', 'none');
            }else {
                $('#returnDateMessage').css('display', 'block');
            }
        });
    });
});
</script>
